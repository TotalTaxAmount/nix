{
    // Editor
    "window.menuBarVisibility": "toggle",
    "explorer.confirmDelete": false,
    "update.showReleaseNotes": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "workbench.colorTheme": "Material Theme Darker",
    "workbench.editor.enablePreview": false,
    "editor.fontFamily": "'@font@', monospace",
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
    "editor.tabSize": 2,

    "editor.renderWhitespace": "selection",
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.folding": false,
    "editor.glyphMargin": false,
    "explorer.openEditors.visible": 0,
    "workbench.statusBar.visible": true,
    "indenticator.color.dark": "rgba(255,255,255,.1)",
    "workbench.colorCustomizations": { 
      // Tab active border
        "tab.activeBorder": "#0000"
    },

    "workbench.tree.renderIndentGuides": "none",
    "workbench.layoutControl.type": "menu",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.lineHeight": 26,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.bracketPairs": true,
    "editor.occurrencesHighlight": false,
    "breadcrumbs.enabled": false,
    "workbench.layoutControl.enabled": false,
    "window.title": "${dirty}${activeEditorShort}",
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.productIconTheme": "material-product-icons",
    "editor.smoothScrolling": true,


    // Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    // Cmake
    "cmake.showNotAllDocumentsSavedQuestion": false,
    "cmake.showOptionsMovedNotification": false,
    "cmake.configureOnOpen": true,

    // Terminal
    "terminal.integrated.fontFamily": "@font@",
    "terminal.integrated.profiles.linux": {
        "tmux-shell": {
          "path": "tmux",
          "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}"]
        }  
    },
    "terminal.integrated.env.windows": {
        "DISPLAY": "localhost:10.0"
    },

    // Custom css
    "vscode_custom_css.imports": [
        "file://@customcss@"
    ],

    // Misc
    "update.mode": "none",
    "terminal.integrated.cursorBlinking": true,
    "vsicons.dontShowNewVersionMessage": true,
    "css.lint.unknownProperties": "ignore",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true
    }    
}
