
(defwindow system
    :stacking "fg"
    :focusable "false"
    :screen 1
    :monitor 0
    :geometry (geometry
      :x "10px"
      :y "12px"
      :anchor "top left"
      :width "350px"
      :height "225px"
    )
    (box
      :class "system_container"
      :orientation "v"
      (disks)
    )
  )
  
  (defwidget disks []
    (box :class "disks_container"
      (circular-progress
        :value {EWW_DISK["/"].used_perc}
        :class "disks"
        :thickness 15
        (label :text "ðŸ–´"
          :class "disks_icon"
          :tooltip "${EWW_DISK['/'].used_perc}% Disk usage"
          :limit-width 2
          :wrap false
        )
      )
    )
  )